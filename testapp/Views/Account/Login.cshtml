@model LogginViewModel

@{
    ViewBag.Title = "Вход";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-md-6">
            <form method="post" class="form-signin">
                <h1 class="h3 mb-3 fw-normal">Пожалуйста, войдите</h1>

                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control">
                    <label asp-for="Email">Адрес эл. почты</label>
                    <span asp-validation-for="Email" class="text-dark"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label asp-for="Password">Пароль</label>
                    <span asp-validation-for="Password" class="text-dark"></span>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input asp-for="RememberMe" type="checkbox"> Запомнить меня
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-dark" type="submit">Войти</button>
                <a asp-action="Register" class="w-100 btn btn-outline-dark">Зарегистрироваться</a>
            </form>
        </div>
        
    </div>
</div>
