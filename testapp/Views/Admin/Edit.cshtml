<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label">Уникальный номер</label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label">Логин</label>
        <div class="col-sm-10">
            <input asp-for="UserName" type="text" class="form-control" placeholder="Логин" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Эл. Адрес</label>
        <div class="col-sm-10">
            <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">Имя</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" type="text" class="form-control" placeholder="Имя" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Фамилия</label>
        <div class="col-sm-10">
            <input asp-for="LastName" type="text" class="form-control" placeholder="Фамилия" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" >
        <label asp-for="GroupId" class="col-sm-2 col-form-label">Группа</label>
        <div class="col-sm-10">
            @Html.DropDownList("GroupId", ViewBag.Group as SelectList)
            <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserRoleId" class="col-sm-2 col-form-label">Роль пользователя</label>
        <div class="col-sm-10">
             @Html.DropDownList("UserRoleId", ViewBag.Types as SelectList)
            <span asp-validation-for="UserRoleId" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-dark">Изменить</button>
        </div>
    </div>

</form>